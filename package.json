{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend server with Express and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "start": "NODE_ENV=production node dist/index.js",
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "deploy": "firebase deploy --only functions"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^11.5.0",
    "firebase-functions": "^4.5.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
} 